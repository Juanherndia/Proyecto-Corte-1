# Variables de entorno para desarrollo local
# Copiar este archivo como .env y ajustar los valores según necesidades

# Configuración de la aplicación
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=DEBUG

# Base de datos
DB_HOST=localhost
DB_PORT=5432
DB_NAME=planificador_medico
DB_USERNAME=postgres
DB_PASSWORD=postgres123

# Seguridad
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-must-be-32-chars-minimum
JWT_EXPIRATION_HOURS=24
PASSWORD_HASH_ROUNDS=12

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# Redis (opcional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (para notificaciones futuras)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@planificadormedico.com

# Configuración de archivos
UPLOAD_FOLDER=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# Monitoreo (opcional)
ENABLE_METRICS=false
PROMETHEUS_PORT=8000

# Notificaciones (para expansión futura)
ENABLE_PUSH_NOTIFICATIONS=false
FIREBASE_CREDENTIALS_PATH=

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Session
SESSION_SECRET_KEY=dev-session-secret-change-in-production